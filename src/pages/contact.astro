---
import '../styles/global.css'

import arrow from '../assets/arrow.svg'
import location from '../assets/location.svg'
import phone from '../assets/phone.svg'
import email from '../assets/email.svg'
---

<div class='min-h-screen bg-white p-4 md:p-8'>
  <div class='max-w-4xl mx-auto'>
    <div class='mb-8'>
      <a
        href='/'
        class='inline-flex text-[#d1272d] hover:text-[#b01f24] transition-colors duration-300'
        aria-label='Volver'
      >
        <img src={arrow.src} alt='Arrow icon' class='w-6 h-6' />
      </a>
    </div>

    <header class='mb-12 md:mb-16 text-center'>
      <div class='relative inline-block'>
        <h1 class='text-4xl md:text-5xl font-light tracking-tight'>Contacto</h1>
        <div class='absolute -bottom-2 left-0 w-full h-[2px] bg-[#d1272d]'>
        </div>
      </div>
    </header>

    <div class='grid md:grid-cols-2 gap-12 md:gap-16'>
      <div class='space-y-8'>
        <div>
          <h2 class='text-2xl font-light mb-6'>Informacion</h2>

          <div class='space-y-4'>
            <div class='flex items-start'>
              <img
                alt='Phone icon'
                src={phone.src}
                class='w-5 h-5 text-[#d1272d] mt-1 mr-3 flex-shrink-0'
              />
              <div>
                <p class='font-medium'>Telefono</p>
                <p class='text-gray-600'>+54 9 221 455-6906</p>
              </div>
            </div>

            <div class='flex items-start'>
              <img
                alt='Email icon'
                src={email.src}
                class='w-5 h-5 text-[#d1272d] mt-1 mr-3 flex-shrink-0'
              />
              <div>
                <p class='font-medium'>Email</p>
                <p class='text-gray-600'>info@laarboleda.com</p>
              </div>
            </div>

            <div class='flex items-start'>
              <img
                alt='Location icon'
                src={location.src}
                class='w-5 h-5 text-[#d1272d] mt-1 mr-3 flex-shrink-0'
              />
              <div>
                <p class='font-medium'>Direccion</p>
                <p class='text-gray-600'>Carpinteria, San Luis, Argentina</p>
              </div>
            </div>
          </div>
        </div>

        <div>
          <h2 class='text-2xl font-light mb-6'>Horarios</h2>
          <div class='space-y-2'>
            <div class='flex justify-between'>
              <span class='font-medium'>Check-in:</span>
              <span class='text-gray-600'>14:00 - 20:00 hs</span>
            </div>
            <div class='flex justify-between'>
              <span class='font-medium'>Check-out:</span>
              <span class='text-gray-600'>hasta las 10:00 hs</span>
            </div>
            <div class='flex justify-between'>
              <span class='font-medium'>Recepcion:</span>
              <span class='text-gray-600'>8:00 - 20:00 hs</span>
            </div>
          </div>
        </div>

        <div>
          <h2 class='text-2xl font-light mb-6'>Ubicacion</h2>
          <div class='aspect-video bg-gray-100 rounded-lg overflow-hidden'>
            <iframe
              src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d26883.08360131707!2d-65.05!3d-32.4!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95d2da6c0c5e2e7f%3A0x5d7fa2e9e6dd5a9a!2sCarpinter%C3%ADa%2C%20San%20Luis!5e0!3m2!1ses!2sar!4v1699382000000!5m2!1ses!2sar'
              width='100%'
              height='100%'
              style={{ border: 0 }}
              loading='lazy'
              title='UbicaciÃ³n de La Arboleda'></iframe>
          </div>
        </div>
      </div>

      {/* Formulario de contacto */}
      <div class='bg-gray-50 p-6 md:p-8 rounded-lg'>
        <h2 class='text-2xl font-light mb-6'>Envianos un mensaje</h2>
      </div>
    </div>
  </div>
</div>
