---
import '../styles/global.css'

import arrow from '../assets/svg/arrow.svg'
import location from '../assets/svg/location.svg'
import phone from '../assets/svg/phone.svg'
import email from '../assets/svg/email.svg'
import map from '../assets/map.webp'

import Footer from '../components/footer.astro'
import Layout from '../layouts/Layout.astro'

const linkLocation =
  'https://www.google.es/maps/place/La+Arboleda+en+Carpinteria/@-32.3950068,-65.0057687,16z/data=!4m6!3m5!1s0x95d2e3220122fe8d:0x841412906b839df!8m2!3d-32.3950068!4d-65.0013913!16s%2Fg%2F11h21_28c7?hl=es&entry=ttu'
---

<Layout title='Contacto'>
  <main class='min-h-screen bg-white p-4 md:p-8'>
    <section class='max-w-4xl mx-auto'>
      <div class='mb-8'>
        <a
          href='/'
          class='inline-flex text-[#d1272d] hover:text-[#b01f24] transition-colors duration-300'
          aria-label='Volver'
        >
          <img src={arrow.src} alt='Arrow icon' class='w-6 h-6' />
        </a>
      </div>

      <header class='mb-12 md:mb-16 text-center'>
        <div class='relative inline-block'>
          <h1 class='text-4xl md:text-5xl font-light tracking-tight'>
            Contacto
          </h1>
          <div class='absolute -bottom-2 left-0 w-full h-[2px] bg-[#d1272d]'>
          </div>
        </div>
      </header>

      <div class='grid md:grid-cols-2 gap-12 md:gap-16'>
        <div class='space-y-8'>
          <div>
            <h2 class='text-2xl font-light mb-6'>Informacion</h2>

            <div class='space-y-4'>
              <div class='flex items-start'>
                <img
                  alt='Phone icon'
                  src={phone.src}
                  class='w-5 h-5 text-[#d1272d] mt-1 mr-3 flex-shrink-0'
                />
                <div>
                  <p class='font-medium'>Telefono</p>
                  <p class='text-gray-600'>+54 9 221 455-6906</p>
                </div>
              </div>

              <div class='flex items-start'>
                <img
                  alt='Email icon'
                  src={email.src}
                  class='w-5 h-5 text-[#d1272d] mt-1 mr-3 flex-shrink-0'
                />
                <div>
                  <p class='font-medium'>Email</p>
                  <p class='text-gray-600'>info@laarboleda.com</p>
                </div>
              </div>

              <div class='flex items-start'>
                <img
                  alt='Location icon'
                  src={location.src}
                  class='w-5 h-5 text-[#d1272d] mt-1 mr-3 flex-shrink-0'
                />
                <div>
                  <p class='font-medium'>Direccion</p>
                  <p class='text-gray-600'>Carpinteria, San Luis, Argentina</p>
                </div>
              </div>
            </div>
          </div>

          <div>
            <h2 class='text-2xl font-light mb-6'>Horarios</h2>
            <div class='space-y-2'>
              <div class='flex justify-between'>
                <span class='font-medium'>Check-in:</span>
                <span class='text-gray-600'>14:00 - 20:00 hs</span>
              </div>
              <div class='flex justify-between'>
                <span class='font-medium'>Check-out:</span>
                <span class='text-gray-600'>hasta las 10:00 hs</span>
              </div>
              <div class='flex justify-between'>
                <span class='font-medium'>Recepcion:</span>
                <span class='text-gray-600'>8:00 - 20:00 hs</span>
              </div>
            </div>
          </div>

          <div>
            <h2 class='text-2xl font-light mb-4'>Ubicacion</h2>
            <div class='bg-gray-100 rounded-lg overflow-hidden'>
              <a href={linkLocation} target='_blank'>
                <img
                  src={map.src}
                  alt='Mapa de la ubicacion de La Arboleda'
                  class='object-cover transform scale-105 hover:scale-110 transition-transform duration-300 hover:cursor-pointer'
                />
              </a>
            </div>
          </div>
        </div>

        {/* Formulario de contacto */}
        <div class='bg-gray-50 p-6 md:p-8 rounded-lg'>
          <h2 class='text-2xl font-light mb-6'>Envianos un mensaje</h2>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
